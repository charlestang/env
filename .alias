### ls alias ###
if [[ $platform == "Darwin" ]]; then
    alias ls="ls -G"
    alias listen="netstat -f inet -p tcp -nRa | grep 'LISTEN'"
else
    alias ls="ls --color"
    ### https://www.jethrocarr.com/2007/04/26/vi-vs-vim-on-centosrhel/ ### this is why the following 3 lines
    if [ -f /usr/bin/vim ]; then
        alias vi='vim'
    fi
fi

alias dir="ls"
alias l="ls"
alias ll="ls -l"
alias lh="ls -lh"
alias la="ls -ahl"

### cd alias ###
alias ..="cd .."
alias ...="cd ../.."
alias cd..="cd .."
alias cd...="cd ../.."

alias glogc="git log --graph --date=short --pretty=format:\"%C(auto)%h %Cgreen%an%Creset %Cblue%cd%Creset %C(auto)%d %s\""

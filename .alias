### ls alias ###
if [[ $platform == "Darwin" ]]; then
    alias ls="ls -G"
    alias listen="netstat -f inet -p tcp -nRa | grep 'LISTEN'"
else
    alias ls="ls --color"
fi

alias dir="ls"
alias l="ls"
alias ll="ls -l"
alias lh="ls -lh"
alias la="ls -ahl"

### cd alias ###
alias ..="cd .."
alias ...="cd ../.."
alias cd..="cd .."
alias cd...="cd ../.."

alias glogc="git log --graph --pretty=format:\"%C(auto)%h %Cgreen%an%Creset %C(auto)%d %s\""
